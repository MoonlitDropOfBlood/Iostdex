<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <corners android:bottomLeftRadius="8dp" android:topLeftRadius="8dp" />
                    <stroke android:width="1dp" android:color="@color/line_color" />
                </shape>
            </item>
            <item android:drawable="@android:color/white" android:left="8dp" android:top="1dp" android:bottom="1dp" />
        </layer-list>

    </item>

    <item android:state_checked="true">
        <shape>
            <corners android:bottomLeftRadius="8dp" android:topLeftRadius="8dp" />
            <stroke android:width="1dp" android:color="@color/up" />
        </shape>
    </item>
</selector>